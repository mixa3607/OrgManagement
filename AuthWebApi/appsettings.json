{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "db_auth": "Host=127.0.0.1;Port=5432;Database=auth_api_db;Username=admin;Password=admin"
  },

  "AuthOptions": {
    "JwtIssuer": "AuthServer",
    "JwtAudience": "AuthClient",
    "JwtLifetimeMins": 1,
    "RefreshTokenLifetimeDays": 5,
    "PublicCrtPath": "./jwt.crt",
    "PrivatePfxPath": "./jwt.pfx"
  } 
}
